<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="ratio" format="float"/>
    <attr name="number" format="integer"/>
    <attr name="step" format="integer"/>

    <attr name="adjust_to" format="enum">
        <enum name="height" value="1" />
        <enum name="width" value="2"/>
    </attr>
    <attr name="adjust_to_bound" format="boolean"/>

    <attr name="maxHeight" format="dimension"/>
    <attr name="minNumber" format="integer"/>
    <attr name="maxNumber" format="integer"/>

    <declare-styleable name="RatioFrameLayout">
        <attr name="ratio"/>
        <attr name="adjust_to"/>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio"/>
        <attr name="adjust_to"/>
    </declare-styleable>

    <declare-styleable name="SelfAdaptionScrollView">
        <attr name="maxHeight"/>
    </declare-styleable>

    <declare-styleable name="NumberPickerFrameLayout">
        <attr name="pickerTextViewId" format="reference" />
        <attr name="pickerPlusButtonId" format="reference" />
        <attr name="pickerMinusButtonId" format="reference" />
        <attr name="pickerPlusAutoActivated" format="boolean"/>
        <attr name="pickerMinusAutoActivated" format="boolean"/>
        <attr name="number"/>
        <attr name="minNumber"/>
        <attr name="maxNumber"/>
        <attr name="step"/>
        <attr name="adjust_to_bound"/>
    </declare-styleable>
</resources>