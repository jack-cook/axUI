<resources>
    <attr name="ratio" format="float"/>
    <attr name="number" format="integer"/>
    <attr name="step" format="integer"/>

    <attr name="adjust_to" format="enum">
        <enum name="height" value="1" />
        <enum name="width" value="2"/>
    </attr>
    <attr name="adjust_to_bound" format="boolean"/>

    <attr name="maxHeight" format="dimension"/>
    <attr name="minNumber" format="integer"/>
    <attr name="maxNumber" format="integer"/>

    <declare-styleable name="RatioFrameLayout">
        <attr name="ratio"/>
        <attr name="adjust_to"/>
    </declare-styleable>

    <declare-styleable name="RatioRelativeLayout">
        <attr name="ratio"/>
        <attr name="adjust_to"/>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio"/>
        <attr name="adjust_to"/>
    </declare-styleable>

    <declare-styleable name="SelfAdaptionScrollView">
        <attr name="maxHeight"/>
    </declare-styleable>

    <declare-styleable name="NumberPickerFrameLayout">
        <attr name="pickerTextViewId" format="reference" />
        <attr name="pickerPlusButtonId" format="reference" />
        <attr name="pickerMinusButtonId" format="reference" />
        <attr name="pickerPlusAutoActivated" format="boolean"/>
        <attr name="pickerMinusAutoActivated" format="boolean"/>
        <attr name="number"/>
        <attr name="minNumber"/>
        <attr name="maxNumber"/>
        <attr name="step"/>
        <attr name="adjust_to_bound"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="gap" format="reference" />
        <attr name="showGaps" format="integer">
            <flag name="none" value="0" />
            <flag name="beginning" value="1" />
            <flag name="middle" value="2" />
            <flag name="end" value="4" />
        </attr>
        <attr name="bandWidth" format="dimension" />
        
        <attr name="android:divider"/>
        <attr name="android:showDividers"/>
        <attr name="android:gravity"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout_Layout">
        <attr name="android:layout_gravity"/>
        <attr name="carriageReturn" format="boolean"/>
    </declare-styleable>
</resources>